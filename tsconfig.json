{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "lib": ["dom", "es2021"],
    "target": "es2021",
    "module": "es2022",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/renderer/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
